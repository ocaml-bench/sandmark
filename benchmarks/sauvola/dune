(rule
 (targets sauvola.bench)
 (action (ignore-stdout (run orun -o %{targets} --
   %{dep:contrast.exe} %{dep:example2_small.ppm} example2))))

(alias (name bench) (deps sauvola.bench))
(include dune.inc)
