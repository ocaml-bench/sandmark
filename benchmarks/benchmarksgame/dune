(executables (names binarytrees5 fannkuchredux2 fannkuchredux fasta3 fasta6 knucleotide mandelbrot6 nbody pidigits5 regexredux2 revcomp2 spectralnorm2) (libraries unix str))

(rule
     (targets binarytrees5.bench)
      (deps (:prog binarytrees5.exe))
       (action (ignore-stdout (run orun -o %{targets} -- %{prog}))))
(rule
     (targets fannkuchredux2.bench)
      (deps (:prog fannkuchredux2.exe))
       (action (ignore-stdout (run orun -o %{targets} -- %{prog} 7))))
(rule
     (targets fannkuchredux.bench)
      (deps (:prog fannkuchredux.exe))
       (action (ignore-stdout (run orun -o %{targets} -- %{prog} 7))))
(rule
     (targets fasta3.bench)
      (deps (:prog fasta3.exe))
       (action (ignore-stdout (run orun -o %{targets} -- %{prog}))))
(rule
     (targets fasta6.bench)
      (deps (:prog fasta6.exe))
       (action (ignore-stdout (run orun -o %{targets} -- %{prog}))))
(rule
     (targets knucleotide.bench)
      (deps (:prog knucleotide.exe) (:txt knucleotide-input.txt))
       (action (ignore-stdout (run orun -o %{targets} -i knucleotide-input.txt -- %{prog}))))
(rule
     (targets mandelbrot6.bench)
      (deps (:prog mandelbrot6.exe))
       (action (ignore-stdout (run orun -o %{targets} -- %{prog} 200))))
(rule
     (targets nbody.bench)
      (deps (:prog nbody.exe))
       (action (ignore-stdout (run orun -o %{targets} -- %{prog} 1000))))
(rule
     (targets pidigits5.bench)
      (deps (:prog pidigits5.exe))
       (action (ignore-stdout (run orun -o %{targets} -- %{prog}))))
(rule
     (targets regexredux2.bench)
      (deps (:prog regexredux2.exe))
       (action (ignore-stdout (run orun -o %{targets} -- %{prog}))))

(rule
     (targets knucleotide-input.txt)
     (deps (:prog fasta3.exe))
     (action (with-stdout-to %{targets} (run %{prog} 10000000 > %{targets}))))

(rule
     (targets revcomp2.bench)
      (deps (:prog revcomp2.exe) (:txt knucleotide-input.txt))
       (action (ignore-stdout (run orun -o %{targets} -i knucleotide-input.txt -- %{prog}))))
(rule
     (targets spectralnorm2.bench)
      (deps (:prog spectralnorm2.exe))
       (action (ignore-stdout (run orun -o %{targets} -- %{prog}))))

(alias (name bench) (deps binarytrees5.bench fannkuchredux2.bench fannkuchredux.bench fasta3.bench fasta6.bench knucleotide.bench mandelbrot6.bench nbody.bench regexredux2.bench revcomp2.bench spectralnorm2.bench))
